{
  "name": "torre-ai-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack monorepo with NestJS backend and frontend",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "backend": "npm run start --workspace=apps/backend",
    "frontend": "npm run start --workspace=apps/frontend",
    "backend:dev": "npm run start:dev --workspace=apps/backend",
    "frontend:dev": "npm run dev --workspace=apps/frontend",
    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces --if-present"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3"
  }
}
